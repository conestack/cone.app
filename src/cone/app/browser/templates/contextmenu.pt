<tal:block xmlns:tal="http://xml.zope.org/namespaces/tal"
           xmlns:ajax="http://namespaces.conestack.org/ajax"
           omit-tag="True">

  <nav id="contextmenu"
       role="contextmenu"
       class="navbar mt-2 p-0 contextsensitiv navbar-expand rounded shadow-sm card"
       ajax:bind="contextactionschanged"
       ajax:action="contextmenu:#contextmenu:replace"
       tal:define="toolbars context.rendered_toolbars"
       tal:condition="toolbars">

    <div class="container-fluid p-0">
      <ul class="navbar-nav flex-wrap flex-column flex-sm-row">
        <tal:toolbars repeat="toolbar toolbars">
          <tal:toolbar replace="structure toolbar" />
        </tal:toolbars>
      </ul>
    </div>

  </nav>

</tal:block>
