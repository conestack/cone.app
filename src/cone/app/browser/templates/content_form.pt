<div xmlns:tal="http://xml.zope.org/namespaces/tal">

  <tal:contextmenu condition="context.show_contextmenu"
                   replace="structure context.rendered_contextmenu" />

  <div tal:define="render_card context.render_card;
                   wrapper_class 'card mt-3' if context.render_card else '';
                   container_class 'card-body' if context.render_card else '';"
       tal:attributes="class wrapper_class">

    <div tal:attributes="class container_class">

      <h4 class="card-title mb-3"
          tal:condition="context.show_heading">
        <span class="label label-primary"
              tal:content="context.form_heading">Title</span>
      </h4>

      <div>
        <tal:form replace="structure context.rendered_form" />
      </div>

    </div>

  </div>

</div>
