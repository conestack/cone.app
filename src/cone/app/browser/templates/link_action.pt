<tal:link xmlns:tal="http://xml.zope.org/namespaces/tal"
          xmlns:ajax="http://namespaces.conestack.org/ajax"
          omit-tag="True">

  <a tal:condition="context.text"
     id="${context.id|nothing}"
     href="${context.href|nothing}"
     class="${context.css_class|nothing}"
     title="${context.title|nothing}"
     ajax:bind="${context.bind|nothing}"
     ajax:target="${context.target|nothing}"
     ajax:event="${context.event|nothing}"
     ajax:action="${context.action|nothing}"
     ajax:confirm="${context.confirm|nothing}"
     ajax:overlay="${context.overlay|nothing}"
     ajax:overlay-css="${context.overlay_css|nothing}"
     ajax:overlay-uid="${context.overlay_uid|nothing}"
     ajax:overlay-title="${context.overlay_title|nothing}"
     ajax:path="${context.path|nothing}"
     ajax:path-target="${context.path_target|nothing}"
     ajax:path-action="${context.path_action|nothing}"
     ajax:path-event="${context.path_event|nothing}"
     ajax:path-overlay="${context.path_overlay|nothing}"
     ajax:path-overlay-css="${context.path_overlay_css|nothing}"
     ajax:path-overlay-uid="${context.path_overlay_uid|nothing}"
     ajax:path-overlay-title="${context.path_overlay_title|nothing}"
    ><span class="${context.icon}"
           tal:condition="context.icon"></span
    >&nbsp;<span tal:replace="context.text">Text</span></a>

  <a tal:condition="not context.text"
     id="${context.id|nothing}"
     href="${context.href|nothing}"
     class="${context.css_class|nothing}"
     title="${context.title|nothing}"
     data-toggle="tooltip"
     data-placement="top"
     ajax:bind="${context.bind|nothing}"
     ajax:target="${context.target|nothing}"
     ajax:event="${context.event|nothing}"
     ajax:action="${context.action|nothing}"
     ajax:confirm="${context.confirm|nothing}"
     ajax:overlay="${context.overlay|nothing}"
     ajax:overlay-css="${context.overlay_css|nothing}"
     ajax:overlay-uid="${context.overlay_uid|nothing}"
     ajax:overlay-title="${context.overlay_title|nothing}"
     ajax:path="${context.path|nothing}"
     ajax:path-target="${context.path_target|nothing}"
     ajax:path-action="${context.path_action|nothing}"
     ajax:path-event="${context.path_event|nothing}"
     ajax:path-overlay="${context.path_overlay|nothing}"
     ajax:path-overlay-css="${context.path_overlay_css|nothing}"
     ajax:path-overlay-uid="${context.path_overlay_uid|nothing}"
     ajax:path-overlay-title="${context.path_overlay_title|nothing}"
    ><span class="${context.icon}"
           tal:condition="context.icon"></span></a>

</tal:link>
