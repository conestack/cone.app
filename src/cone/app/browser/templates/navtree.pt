<tal:block xmlns:tal="http://xml.zope.org/namespaces/tal"
           xmlns:ajax="http://namespaces.conestack.org/ajax"
           omit-tag="True">

  <li id="navtree"
      class="contextsensitiv nav-item mb-1 text-white"
      ajax:bind="contextchanged"
      ajax:action="navtree:#navtree:replace">

    <div role="button"
         class="nav-item nav-link text-light">
      <i class="bi-star me-2"></i>
      <span tal:content="context.title">Navigation</span>
      <i class="bi-chevron-right"
         data-bs-toggle="collapse"
         data-bs-target="#navigation-collapse"></i>
    </div>

    <div class="collapse" id="navigation-collapse">
      <tal:tree replace="structure context.rendertree(context.navtree()['children'])" />
    </div>
  </li>

</tal:block>