<tal:logo xmlns:tal="http://xml.zope.org/namespaces/tal"
          xmlns:ajax="http://namespaces.conestack.org/ajax"
          omit-tag="True">

  <a href="${request.application_url}"
     id="header-logo"
     ajax:bind="click"
     ajax:target="${request.application_url}"
     ajax:event="contextchanged:#layout"
     ajax:path="href"
     class="position-absolute mt-2 mx-3 text-decoration-none">
    <span class="fs-4" tal:content="model.root.metadata.title">Cone</span>
  </a>

</tal:logo>
