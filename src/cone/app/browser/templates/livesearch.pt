<tal:search xmlns:tal="http://xml.zope.org/namespaces/tal"
            xmlns:i18n="http://xml.zope.org/namespaces/i18n"
            i18n:domain="cone.app"
            omit-tag="True">

  <ul class="nav navbar-nav navbar-right">
    <li id="search">

    <div class="input-group">
      <span class="input-group-text" style="position: absolute; transform: translateX(-100%);">
        <i class="bi-search"></i>
      </span>
      <input type="text"
             class="form-control"
             id="search-text"
             placeholder="search database ..."
             name="term"
             i18n:attributes="placeholder search_database" />
    </div>

    </li>
  </ul>

</tal:search>
