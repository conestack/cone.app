<tal:block xmlns:tal="http://xml.zope.org/namespaces/tal"
           xmlns:ajax="http://namespaces.conestack.org/ajax"
           xmlns:i18n="http://xml.zope.org/namespaces/i18n"
           i18n:domain="cone.app"
           omit-tag="True">

  <div id="settings_sidebar"
       class="contextsensitiv list-group"
       ajax:bind="contextchanged"
       ajax:action="settings_sidebar:#settings_sidebar:replace">

    <div class="list-group-item active"
         i18n:translate="settings">
      Settings
    </div>

    <ul tal:define="items context.categorized_children">
      <tal:setting repeat="item items">
          <span class="list-group-item settings_header" tal:content="item"></span>
          <li tal:repeat="item_data items[item]"
              class="list-group-item">
            <a href="${item_data['target']}"
               ajax:bind="click"
               ajax:target="${item_data['target']}"
               ajax:event="contextchanged:#layout"
               ajax:path="href">
              <i class="${item_data['icon']}" alt="..."></i>
              <span tal:replace="item_data['title']">Title</span>
            </a>
          </li>
      </tal:setting>

    </ul>

  </div>

</tal:block>
