<tal:block xmlns:tal="http://xml.zope.org/namespaces/tal"
           xmlns:ajax="http://namespaces.conestack.org/ajax"
           xmlns:i18n="http://xml.zope.org/namespaces/i18n"
           i18n:domain="cone.app"
           omit-tag="True">

  <div id="settings_sidebar"
       class="contextsensitiv list-group"
       ajax:bind="contextchanged"
       ajax:action="settings_sidebar:#settings_sidebar:replace">

    <div class="list-group-item active"
         i18n:translate="settings">
      Settings
    </div>

    <ul tal:define="categories context.categorized_children">

      <tal:category repeat="category_name categories">
        <span class="list-group-item settings_header"
              tal:condition="category_name != context.no_category"
              tal:content="category_name"></span>
        <li tal:repeat="item categories[category_name]"
            class="list-group-item ${'selected' if item['current'] else ''}">
          <a href="${item['target']}"
             ajax:bind="click"
             ajax:target="${item['target']}"
             ajax:event="contextchanged:#layout"
             ajax:path="href">
            <i class="${item['icon']}" alt="..."></i>
            <span tal:replace="item['title']">Title</span>
          </a>
        </li>
      </tal:category>

    </ul>

  </div>

</tal:block>
